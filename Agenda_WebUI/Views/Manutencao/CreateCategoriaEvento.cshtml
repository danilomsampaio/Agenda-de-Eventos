@model Agenda.Model.agdCategoriaEvento

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/fonte-google.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/simple-line-icons.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-timepicker.min.css" rel="stylesheet" />

    <link href="~/Content/components.min.css" rel="stylesheet" />
    <link href="~/Content/plugins.min.css" rel="stylesheet" />

    <link href="~/Content/layout.min.css" rel="stylesheet" />
    <link href="~/Content/blue.min.css" rel="stylesheet" />

</head>

<body>
    <div class="row text-center">
        <div class="col-md-3"></div>
        <div class="col-md-6 ">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="icon-bag font-red-sunglo"></i>
                        <span class="caption-subject bold uppercase">Cadastro de Categoria</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form action="@Url.Action("CreateCategoriaEvento")" method="post">
                        @Html.AntiForgeryToken()
                        @*<div class="form-group">
                            <label>Nome</label>
                            <div class="input-icon">
                                <i class="fa fa-bell-o font-green"></i>
                                <input name="agdCategoriaEvento.aceNome"; type="text" class="form-control" placeholder="Left icon">
                            </div>
                        </div>*@
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.aceNome)
                            <div>
                                @Html.EditorFor(model => model.aceNome, new { htmlAttributes = new { @class="form-control", placeholder="Nome da Categoria" } })
                                @Html.ValidationMessageFor(model => model.aceNome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Salvar</button>
                            <a href="@Url.Action("Index", "home")" class="btn default">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END SAMPLE FORM PORTLET-->

 

    <div class="copyright"> 2017 © Danilo Maglio Sampaio. </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/js.cookie.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/jquery.blockui.min.js"></script>
    <script src="~/Scripts/bootstrap-switch.min.js"></script>


    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-timepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

    <script src="~/Scripts/app.min.js"></script>
    <script src="~/Scripts/components-date-time-pickers.min.js"></script>
    <script src="~/Scripts/layout.min.js"></script>
    <script src="~/Scripts/demo.min.js"></script>

</body>
</html>