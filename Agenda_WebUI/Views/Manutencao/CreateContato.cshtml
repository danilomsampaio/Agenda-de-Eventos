@using Agenda.Model
@model agdContato


@{
    ViewBag.Title = "Novo Contato";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/fonte-google.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/simple-line-icons.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-timepicker.min.css" rel="stylesheet" />

    <link href="~/Content/components.min.css" rel="stylesheet" />
    <link href="~/Content/plugins.min.css" rel="stylesheet" />

    <link href="~/Content/layout.min.css" rel="stylesheet" />
    <link href="~/Content/blue.min.css" rel="stylesheet" />

</head>

<body>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Agenda", "Index", "Home")</li>
            <li>@Html.ActionLink("Lista de Eventos", "Eventos", "Evento")</li>
            <li>@Html.ActionLink("Criar Categoria de Evento", "CreateCategoriaEvento", "Manutencao")</li>
            <li>@Html.ActionLink("Criar Novo Contato", "CreateContato", "Manutencao")</li>
        </ul>
    </div>
    <div class="row text-center">
        <div class="col-md-3"></div>
        <div class="col-md-6 ">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-red-sunglo">
                        <i class="icon-settings font-red-sunglo"></i>
                        <span class="caption-subject bold uppercase"> Cadastro de Contato</span>
                    </div>
                </div>
                <div class="portlet-body form">

                    <form action="@Url.Action("CreateContato")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Esse contato será um usuário da Agenda?</label>
                            <div class="actions" id="contatoUsuario">
                                <input type="checkbox" class="make-switch" data-on="success" data-on-color="success" data-off-color="warning" data-size="small">
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.actEmail)
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                @Html.EditorFor(model => model.actEmail, new { htmlAttributes = new { @class = "form-control input-circle-right", placeholder = "Ex: email@email.com" } })
                                @Html.ValidationMessageFor(model => model.actEmail, "", new { @class = "text-danger" })
                                @* <input type="text" class="form-control input-circle-right" placeholder="Email Address" name="agdContato.actEmail">*@
                            </div>
                        </div>

                        <div id="ativaUsuario" style="display: none;">
                            <div class="form-group">
                                @Html.LabelFor(model => model.agdUsuario.ausSenha)
                                @*<label for="exampleInputPassword1">Password</label>*@
                                <div class="input-group">
                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="agdUsuarioSenha">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user font-red"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.actNome)
                            @*<div class="input-icon">
                                    <i class="fa fa-bell-o font-green"></i>
                                    <input type="text" name="agdContato.actNome" class="form-control" placeholder="Nome do Contato">
                                </div>*@
                            <div class="input-group">
                                <span class="input-group-addon input-circle-left">
                                    <i class="fa fa-users"></i>
                                </span>
                                @Html.EditorFor(model => model.actNome, new { htmlAttributes = new { @class = "form-control input-circle-right", placeholder = "Nome do Contato" } })
                                @Html.ValidationMessageFor(model => model.actNome, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        <div class="form-group">
                            @*<label>Sexo</label>*@
                            @Html.LabelFor(model => model.actSexo)
                            <select class="form-control" name="actSexo">
                                <option value="true">Masculino</option>
                                <option value="false">Feminino</option>
                            </select>
                        </div>

                        <div class="form-group">
                            @*<label>Telefone</label>*@
                            @Html.LabelFor(model => model.actTelefone)
                            <div class="input-icon">
                                <i class="fa fa-phone font-green"></i>
                                @Html.EditorFor(model => model.actTelefone, new { htmlAttributes = new { @class = "form-control input-circle-right", placeholder = "Telefone" } })
                                @Html.ValidationMessageFor(model => model.actTelefone, "", new { @class = "text-danger" })
                                @*<input type="text" name="agdContato.actTelefone" class="form-control" placeholder="Left icon">*@
                            </div>
                        </div>

                        <div class="form-group">
                            @*<label class="control-label">Data de Nascimento</label>*@
                            @Html.LabelFor(model => model.actDataNascimento)
                            @*<input class="form-control date-picker" type="text" name="agdContato.actDataNascimento" />*@
                            @Html.EditorFor(model => model.actDataNascimento, new { htmlAttributes = new { @class = "form-control", placeholder = "DD/MM/AAAA" } })
                            @Html.ValidationMessageFor(model => model.actDataNascimento, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @*<label>Endereco</label>*@
                            @Html.LabelFor(model => model.actEndereco)
                            <div class="input-icon">
                                <i class="fa fa-home font-green"></i>
                                @Html.EditorFor(model => model.actEndereco, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: Rua principal..." } })
                                @Html.ValidationMessageFor(model => model.actEndereco, "", new { @class = "text-danger" })
                                @*<input type="text" name="agdContato.actEndereco" class="form-control" placeholder="Left icon">*@
                            </div>
                        </div>

                        <div class="form-group">
                            @*<label>Foto</label>*@
                            @Html.LabelFor(model => model.actFoto)
                            <div class="input-icon">
                                <i class="fa fa-camera font-green"></i>
                                @Html.EditorFor(model => model.actFoto, new { htmlAttributes = new { @class = "form-control", type="file" } })
                                @Html.ValidationMessageFor(model => model.actFoto, "", new { @class = "text-danger" })
                                @*<input type="file" class="form-control" placeholder="Left icon" name="foto">*@
                            </div>
                        </div>


                        <div class="form-actions">
                            <button type="submit" class="btn blue">Salvar</button>
                            <a href="@Url.Action("Index", "Home")" class="btn default">Voltar</a>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- END SAMPLE FORM PORTLET-->


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/js.cookie.min.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/jquery.blockui.min.js"></script>
    <script src="~/Scripts/bootstrap-switch.min.js"></script>


    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-timepicker.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>

    <script src="~/Scripts/app.min.js"></script>
    <script src="~/Scripts/components-date-time-pickers.min.js"></script>
    <script src="~/Scripts/layout.min.js"></script>
    <script src="~/Scripts/demo.min.js"></script>



    <script type="text/javascript">
        $(function () {
            $('#dataNascimento').datepicker({
                format: 'dd/mm/yyyy'
            });
        });

        $('#contatoUsuario').click(function () {
            console.log('taqui');
            $('#ativaUsuario').fadeToggle(1000);
        });


        //document.getElementById('foto').onchange = function () {
        //    alert('Selected file: ' + this.value);
        //}
    </script>



</body>
</html>